{# src/BlogBundle/BlogBundle/Resources/views/MyPage/contact.html.twig #}
{% extends 'BlogBundleBlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact blogSymfony</h1>
    </header>

    <p>Want to contact Amancio?</p>

    <form action="{{ path('blog_bundle_blog_contact') }}" method="post">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Valider" class="btn" />
    </form>
    
{% endblock %}