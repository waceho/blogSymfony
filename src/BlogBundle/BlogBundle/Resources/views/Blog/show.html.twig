{# src/BlogBundle/BlogBundle/Resouces/views/Blog/show.html.twig #}
{% extends 'BlogBundleBlogBundle::layout.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
    <article class="w3-card-4">
        <header>
            <div class="date">Posted at :<time datetime="{{ blog.created|date('c') }}">{{ blog.created|date('l, F j, Y') }}</time></div>
            <h2>{{ blog.title }}</h2>
        </header>
        <img src="{{ asset(['images/', blog.image]|join) }}" alt="{{ blog.title }} image not found" style="width:150px" class/>
        <div>
            <p>{{ blog.blog }}</p>
        </div>
    </article>
{% endblock %}